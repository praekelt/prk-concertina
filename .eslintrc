{
    "ecmaFeatures": {
        "globalReturn": true,
        "jsx": true,
        "modules": true
    },

    "env": {
        "browser": true,
        "es6": true,
        "node": false
    },

    "globals": {
        "document": false,
        "escape": false,
        "navigator": false,
        "unescape": false,
        "window": false,
        "describe": true,
        "before": true,
        "it": true,
        "expect": true,
        "sinon": true
    },

    "parser": "babel-eslint",

    "plugins": [],

    "rules": {
        "quotes": [1, "single"],
        "strict": [2, "global"],
        "require-jsdoc": [0],
        "valid-jsdoc": [0],
        "brace-style": [2, "1tbs", { "allowSingleLine": false }],
        "camelcase": [2, { "properties": "always" }],
        "block-spacing": [2, "always"],
        "comma-style": [2, "last"],
        "comma-spacing": [2, { "before": false, "after": true }],
        "indent": [2, 4],
        "no-ternary": [0],
        "quote-props": [2, "always"],
        "space-before-function-paren": [2, "never"],
        "padded-blocks": [2, "never"],
        "semi-spacing": [2],
        "space-infix-ops": [2],
        "keyword-spacing": [2],
        "space-in-parens": [2, "never"],
        "no-mixed-spaces-and-tabs": [2]
    }
}
